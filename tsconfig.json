{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES6", "ES2022"],
    "types": ["@league-of-foundry-developers/foundry-vtt-types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/scripts/**/*"]
}
